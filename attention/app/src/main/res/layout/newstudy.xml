<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 개설하기"
            android:textSize="18dp"
            android:textColor="#BAD145"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/category_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="category"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/category_sp"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/category_view"
            android:animationCache="true"
            android:background="@drawable/edittext"
            android:entries="@array/category"
            android:outlineSpotShadowColor="#BAD145"
            android:textColor="#BAD145" />

        <TextView
            android:id="@+id/study_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/category_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="스터디 명"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/study_edit"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@+id/category_sp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="스터디 이름을 입력하세요"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/start_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/study_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="시작 날짜"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/start_edit"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@+id/study_edit"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="ex) YYYY/MM/DD"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/end_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/start_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="종료 날짜"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/end_edit"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@+id/start_edit"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="ex) YYYY/MM/DD"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RelativeLayout>


        <Button
            android:id="@+id/make_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/end_edit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/custombutton"
            android:text="개설하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/end_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/make_btn"
            android:background="@drawable/custombutton"
            android:text="닫기"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>


</RelativeLayout>