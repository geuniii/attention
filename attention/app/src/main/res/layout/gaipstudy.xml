<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 정보"
            android:textSize="18dp"
            android:textColor="#BAD145"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/category_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:background="#BAD145"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="category"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/category_tv"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/category_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/study_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/category_view"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="스터디 명"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/study_tv"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/category_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/start_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/study_view"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="시작 날짜"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/start_tv"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/study_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/end_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/start_view"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="종료 날짜"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/end_tv"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/start_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/member_view"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/end_view"
            android:layout_marginTop="10dp"
            android:background="#BAD145"
            android:gravity="center"
            android:text="현재 멤버"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/member_tv"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/end_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/study_view"
            android:background="@drawable/edittext"
            android:ems="10"
            android:gravity="center"
            android:outlineAmbientShadowColor="#BAD145"
            android:singleLine="false"
            android:textColorHint="#BAD145"
            android:textColorLink="#BAD145"
            android:textSize="12sp" />


        <Button
            android:id="@+id/make_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/member_tv"
            android:layout_marginTop="10dp"
            android:background="@drawable/custombutton"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="가입하기"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/member_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/make_btn"
            android:background="@drawable/custombutton"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="닫기"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>



</RelativeLayout>